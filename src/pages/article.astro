---
import Layout from '$layouts/global.astro';
import ArticleView from '$components/views/ArticleView.svelte';

const { firstName, title, lastName, intro, body, image, organ, year } = Astro.props;
const story = intro ? intro + body : body;
---

<Layout title={"Article: " + firstName + lastName }>
  <ArticleView
    firstName={firstName}
    lastName={lastName}
    organ={organ}
    year={year}
    image={image}
    title={title}
    story={story}
    client:load
  />
</Layout>
