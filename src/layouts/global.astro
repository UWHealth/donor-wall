---
import '$styles/global.scss';
import '$styles/fonts.css';

const { title, classes } = Astro.props;

---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
    <title>{title}</title>
		<style>
			main {
				/* max-width: 1080px; */
				margin: 0 auto;
				display: flex;
				width: 100%;
				place-items: center;
				place-content: center;
			}
		</style>
	</head>
	<body>
		<main class:list={classes && classes}>
      <slot/>
    </main>
  </body>
</html>
